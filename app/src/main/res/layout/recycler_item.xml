<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constL"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="230dp"
        android:id="@+id/cardForBuilding"
        android:orientation="vertical"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:background="@drawable/building_recycler_background"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:background="@drawable/building_recycler_background"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:lineSpacingExtra="8dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="left"
            android:maxLength="35"
            android:text="New York, 30 Avenue"
            android:textColor="#374168"
            android:textSize="20sp"
             />

        <android.support.constraint.ConstraintLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/open_in_map"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="OPEN IN MAP"
                android:textColor="#F08C21"
                android:textSize="14sp" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</LinearLayout>